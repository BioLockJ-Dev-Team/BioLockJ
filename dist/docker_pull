#!/bin/bash
###########################################################################
##                                                                       ##
##  Pull all Docker hub images                                           ##
##                                                                       ##
###########################################################################
function valid_dir {
	if [ ${#1} -gt 0 ] && [ -d "$1" ]; then  
		echo "Y" 
	else 
		echo "N"
	fi
}

docker pull biolockj/manager
docker pull biolockj/javamodule
docker pull biolockj/awkfastaconverter
docker pull biolockj/pearmergereads
docker pull biolockj/rdpclassifier
docker pull biolockj/qiimeclassifier
docker pull biolockj/krakenclassifier
docker pull biolockj/metaphlanclassifier
docker pull biolockj/r_module

echo "Pull complete!"
